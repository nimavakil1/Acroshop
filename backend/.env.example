# Acropaq Store - Backend Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection string
DATABASE_URL=postgres://medusa:medusa@localhost:5432/acropaq_store

# =============================================================================
# REDIS
# =============================================================================
# Redis connection string (for caching and events)
REDIS_URL=redis://localhost:6379

# =============================================================================
# SECURITY
# =============================================================================
# JWT secret for authentication (generate a secure random string)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Cookie secret for sessions (generate a secure random string)
COOKIE_SECRET=your-super-secret-cookie-key-change-in-production

# =============================================================================
# CORS SETTINGS
# =============================================================================
# Allowed origins for admin panel
ADMIN_CORS=http://localhost:7000,http://localhost:7001

# Allowed origins for storefront
STORE_CORS=http://localhost:8000

# Allowed origins for authentication
AUTH_CORS=http://localhost:7000,http://localhost:7001

# =============================================================================
# STRIPE PAYMENT
# =============================================================================
# Stripe API key (from Stripe Dashboard > Developers > API keys)
STRIPE_API_KEY=sk_test_your_stripe_key

# Stripe webhook secret (from Stripe Dashboard > Webhooks)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# EMAIL (BREVO / SENDINBLUE)
# =============================================================================
# Brevo API key for transactional emails
BREVO_API_KEY=your_brevo_api_key

# Sender email address
EMAIL_FROM=shop@acropaq.com
EMAIL_FROM_NAME=Acropaq Shop

# =============================================================================
# STORE CONFIGURATION
# =============================================================================
# Base URL of the storefront
STORE_URL=http://localhost:8000

# Base URL of the backend
BACKEND_URL=http://localhost:9000

# Store country (for VAT calculations)
STORE_COUNTRY=BE

# =============================================================================
# ENVIRONMENT
# =============================================================================
NODE_ENV=development

# Open browser on dev start
OPEN_BROWSER=false

# =============================================================================
# PRODUCTION ONLY
# =============================================================================
# In production, set these:
# NODE_ENV=production
# DATABASE_URL=postgres://user:pass@production-db:5432/acropaq_store
# REDIS_URL=redis://production-redis:6379
# Update CORS to production domains
# Use production Stripe keys
