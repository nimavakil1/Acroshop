# Acropaq Store - Root Environment Variables
# Copy to .env and fill in values (for production deployment)

# =============================================================================
# DOMAIN
# =============================================================================
DOMAIN=shop.acropaq.com

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_PASSWORD=change_this_to_secure_password

# =============================================================================
# REDIS
# =============================================================================
REDIS_PASSWORD=change_this_to_secure_password

# =============================================================================
# SECURITY
# =============================================================================
# Generate with: openssl rand -hex 64
JWT_SECRET=change_this_to_random_64_char_hex
COOKIE_SECRET=change_this_to_random_64_char_hex

# =============================================================================
# STRIPE
# =============================================================================
# Backend (secret key)
STRIPE_API_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_signing_secret

# Frontend (publishable key)
NEXT_PUBLIC_STRIPE_KEY=pk_live_your_stripe_publishable_key

# =============================================================================
# EMAIL (BREVO)
# =============================================================================
BREVO_API_KEY=your_brevo_api_key
